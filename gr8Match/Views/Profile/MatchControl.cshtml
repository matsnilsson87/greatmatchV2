@using gr8Match.Models
@model MatchControlViewModel

@{
    ViewBag.Title = "Passar vi ihop?";
    
}

    <br />
    <div>      
            @if (Model.Interests.Count == 0)
            {
                <h4>Du och @Model.OtherUser.FirstName @Model.OtherUser.LastName kanske inte passar så bra ihop eftersom ni inte delar några gemensamma intressen</h4>
            }

            else
            {
              <h4>Du och @Model.OtherUser.FirstName @Model.OtherUser.LastName skulle passa bra ihop eftersom ni delar dessa intressen tillsammans:</h4>

                foreach (var i in Model.Interests)
                {


                <table class="table">

                    <tr>
                        <td>
                            @i
                        </td>
                    </tr>

                </table>
                    }
                }


        


    </div>

