@model gr8Match.Models.InterestsViewModel

@{
    ViewBag.Title = "Ta bort intressen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <h4>Skriv in ett intresse här att ta bort:</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Interest.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Interest.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <h4>Välj ett av dina intressen att ta bort:</h4>
            @foreach (var c in @Model.InterestsList)
            {
                <p>@Html.ActionLink(@c.Name, "DeleteInterestFromList", "Profile", routeValues: new { c.Id }, htmlAttributes: null)</p>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br/>
                <input type="submit" value="Ta bort" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


